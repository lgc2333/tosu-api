{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true, // use esbuild
    "newLine": "lf",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
